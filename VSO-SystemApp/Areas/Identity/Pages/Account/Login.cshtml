@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


    <div class="w-96 p-6 shadow-lg bg-white rounded-md">
        <h1 class="text-sky-700 text-3xl block text-center font-semibold">@ViewData["Title"]</h1>
        <hr class="mt-3" />
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="mt-3">
                <label asp-for="Input.Email" class="block text-sm mb-2">Email</label>
                <input asp-for="Input.Email" class="border w-full text-sm px-2 py-2 focus:outline-none focus:ring-0 focus:border-gray-600 rounded-md" placeholder="Enter Email..." />
                <span asp-validation-for="Input.Email" class="text-xs text-red-500"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Input.Password" class="block text-sm mb-2">Password</label>
                <input asp-for="Input.Password" id="password" class="border w-full text-sm px-2 py-2 focus:outline-none focus:ring-0 focus:border-gray-600 rounded-md" placeholder="Enter Password..." />
                <span asp-validation-for="Input.Password" class="text-xs text-red-500"></span>
            </div>
            <div class="flex justify-between mt-3">
                <div class="flex items-center gap-1">
                    <input type="checkbox" asp-for="Input.RememberMe" />
                    <label class="text-sm">Remember Me</label>
                </div>
                <div>
                <a class="text-sky-700 text-sm hover:underline" href="ForgotPassword">Forget Password?</a>
                </div>
            </div>
            <div class="mt-5">
                <button type="submit" class="border-2 border-sky-700 bg-sky-700 text-white py-1 w-full rounded-md">Login</button>
            </div>
        <div class="mt-3">
            <a class="text-sky-700 text-sm hover:underline" href="Register">New User?</a>
        </div>
        </form>
    </div>






        
       
  
